{
  "name": "@coldsurfers/ocean-road-design-tokens",
  "version": "1.10.8",
  "bugs": {
    "url": "https://github.com/coldsurfers/ocean-road/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coldsurfers/ocean-road"
  },
  "exports": {
    "./dist/css/*": {
      "default": "./dist/css/*"
    },
    "./js/color/variables": {
      "types": "./dist/js/color/variables.d.ts",
      "default": "./dist/js/color/variables.js"
    },
    "./js/color/variables-theme": {
      "types": "./dist/js/color/variables-theme.d.ts",
      "default": "./dist/js/color/variables-theme.js"
    },
    "./js/semantic/theme-variables": {
      "require": "./dist/js/semantic/theme-variables.js",
      "import": "./dist/js/semantic/theme-variables.mjs",
      "types": "./dist/js/semantic/theme-variables.d.ts"
    },
    "./js/semantic/variables": {
      "require": "./dist/js/semantic/variables.js",
      "import": "./dist/js/semantic/variables.mjs",
      "types": "./dist/js/semantic/variables.d.ts"
    },
    "./dist/json/*": {
      "default": "./dist/json/*"
    }
  },
  "files": [
    "src",
    "js",
    "dist",
    "tokens",
    "package.json"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "prettier": "*",
    "style-dictionary": "^3.7.2",
    "ts-node": "^10.9.1",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "open-color": "^1.9.1"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "ts-node build.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
