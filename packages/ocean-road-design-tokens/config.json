{
    "source": ["tokens/**/*.json"],
    "platforms": {
        "css": {
          "transformGroup": "css",
          "buildPath": "dist/css/",
          "files": [
            {
              "destination": "variables.css",
              "format": "css/variables",
              "filter": "baseColorFilter",
              "options": {
                "outputReferences": true
              }
            },
            {
              "destination": "variables-theme.css",
              "format": "themedCss",
              "filter": "themedColorFilter"
            }
          ]
        },
        "json": {
          "transformGroup": "css",
          "buildPath": "dist/json/",
          "files": [
            {
              "destination": "variables.json",
              "format": "json/flat",
              "filter": "baseColorFilter"
            },
            {
              "destination": "variables-theme.json",
              "format": "themedJson",
              "filter": "themedColorFilter"
            }
          ]
        }
    }
}