{
  "name": "@coldsurfers/ocean-road",
  "version": "1.5.1-rc.0",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "source": "src/",
  "types": "src/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./dist/*.css": {
      "import": "./dist/css/*.css",
      "require": "./dist/css/*.css"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c ./rollup.config.js && cp -R ./src/css ./dist",
    "lint": "yarn eslint 'src/**/*.ts' 'src/**/*.tsx' --cache",
    "prerelease": "yarn build",
    "prerelease:rc": "yarn build",
    "release": "release-it minor --ci",
    "release:rc": "release-it --ci --preRelease=rc"
  },
  "dependencies": {
    "@coldsurfers/design-tokens": "1.10.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@emotion/css": "^11.10.6",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-coldsurfers": "1.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.10.3",
    "rollup": "^3.20.7",
    "rollup-plugin-import-css": "^3.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "@emotion/css": "^11.10.6",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release @coldsurfers/ocean-road v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:git:release": "git reset --hard HEAD"
    }
  }
}
