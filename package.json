    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.12.3",
    "@types/node": "20.12.0",
    "commitlint": "^17.0.2",
    "typescript": "5.8.3",
    "turbo": "2.4.2"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.27",
      "@types/react-dom": "19.0.3",
      "react": "19.2.3",
      "react-dom": "19.2.3",
